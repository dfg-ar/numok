# ==============================
# Numok Docker environment file (example)
# ==============================
# Copy this file to .env and customize values for your setup:
#   cp .env_example .env
# Then start the stack:
#   docker compose up -d --build


# ------------------------------
# Application settings
# ------------------------------
# Port mapping: host port -> container port 80
VIRTUAL_PORT=8080

# Public URL where the app will be accessed
VIRTUAL_HOST=http://localhost:8080

# 1 enables verbose error output (dev), set to 0 in production
APP_DEBUG=1

# Import database/deploy.sql on first boot. Set to false after first init.
RUN_MIGRATIONS=true

# Default admin email (created on first startup)
ADMIN_EMAIL=admin@numok.com

# ------------------------------
# Database (MySQL) settings
# ------------------------------
# Database name for the application
DB_NAME=numok_app

# Database user used by the application container
DB_USER=numok_user

# Strong password for the application DB user (example value, change it)
DB_PASS=change_me_app_2025

# Strong password for MySQL root (db container only; example value, change it)
DB_ROOT_PASSWORD=change_me_root_2025


# ------------------------------
# Optional: Stripe keys (configure inside Admin -> Settings UI)
# ------------------------------
# These are placeholders for your convenience; the app reads them from its UI.
#STRIPE_SECRET_KEY=sk_test_replace_me
#STRIPE_WEBHOOK_SECRET=whsec_replace_me


